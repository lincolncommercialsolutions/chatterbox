# Chatterbox TTS API - Environment Configuration
# Copy to .env and adjust values for your deployment

# API Server Configuration
API_PORT=5000
DEVICE=cuda

# Logging
LOG_LEVEL=INFO

# Text Processing
MAX_TEXT_LENGTH=500
DEFAULT_MAX_TOKENS=400

# Audio Caching (useful for OpenRouter retries)
CACHE_ENABLED=true

# Batch Processing (for future scaling)
BATCH_SIZE=1

# CORS Configuration (for Vercel frontend)
CORS_ORIGINS=https://yourdomain.vercel.app,http://localhost:3000

# AWS Deployment (S3 audio storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
S3_ENABLED=true
S3_BUCKET_NAME=your-bucket-name
S3_AUDIO_PREFIX=chatterbox/audio/
S3_VOICES_PREFIX=chatterbox/voices/
S3_PRESIGNED_URL_EXPIRY=3600

# GPU Configuration (AWS g4dn instances)
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ARCH_LIST="7.0;8.0;8.6;9.0"
CUBLAS_WORKSPACE_CONFIG=:4294967296