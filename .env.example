# Chatterbox TTS API - Environment Configuration
# Copy to .env and adjust values for your deployment

# API Server Configuration
API_PORT=5000
DEVICE=cuda

# Logging
LOG_LEVEL=INFO

# Text Processing
MAX_TEXT_LENGTH=500
DEFAULT_MAX_TOKENS=400

# Audio Caching (useful for OpenRouter retries)
CACHE_ENABLED=true

# Batch Processing (for future scaling)
BATCH_SIZE=1

# CORS Configuration (for Vercel frontend)
CORS_ORIGINS=https://yourdomain.vercel.app,http://localhost:3000

# AWS Deployment (optional - for S3 audio storage)
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_secret
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket

# GPU Configuration (AWS g4dn instances)
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ARCH_LIST="7.0;8.0;8.6;9.0"
CUBLAS_WORKSPACE_CONFIG=:4294967296
